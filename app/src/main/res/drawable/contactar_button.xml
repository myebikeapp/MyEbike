<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#353535" />
            <gradient android:angle="-90" android:startColor="#af5c5f" android:endColor="#a4191b"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#353535" />
            <solid android:color="#f5272d"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#353535" />
            <gradient android:angle="-90" android:startColor="#f71e25" android:endColor="#ff2629" />
        </shape>
    </item>

</selector>
