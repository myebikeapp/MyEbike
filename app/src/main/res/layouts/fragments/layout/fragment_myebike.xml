<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MyEBike">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/recycleview_horizontal_margin"
        android:layout_marginRight="@dimen/recycleview_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            card_view:cardBackgroundColor="@color/color_white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="3dp">

            <Spinner
                android:id="@+id/spinner_uso"
                android:layout_width="match_parent"
                android:layout_height="60dp"></Spinner>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            card_view:cardBackgroundColor="@color/color_white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="3dp">

            <Spinner
                android:id="@+id/spinner_rueda"
                android:layout_width="match_parent"
                android:layout_height="60dp"></Spinner>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            card_view:cardBackgroundColor="@color/color_white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="3dp">

            <Spinner
                android:id="@+id/spinner_suspension"
                android:layout_width="match_parent"
                android:layout_height="60dp"></Spinner>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            card_view:cardBackgroundColor="@color/color_white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="3dp">

            <Spinner
                android:id="@+id/spinner_motor"
                android:layout_width="match_parent"
                android:layout_height="60dp"></Spinner>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            card_view:cardBackgroundColor="@color/color_white"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="3dp">

            <Spinner
                android:id="@+id/spinner_autonomia"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/presupuesto_text"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/myebike_bottom_margin"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                card_view:cardBackgroundColor="@color/color_white"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="3dp">

                <Spinner
                    android:id="@+id/spinner_presupuesto_inf"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                card_view:cardBackgroundColor="@color/color_white"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="3dp">

                <Spinner
                    android:id="@+id/spinner_presupuesto_sup"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>