<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo_asistente"
    tools:context=".main.MyEBike">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:background="@color/color_white">

            <Spinner
                android:id="@+id/spinner_uso"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:background="@color/color_white">

            <Spinner
                android:id="@+id/spinner_cuadro"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:background="@color/color_white">

            <Spinner
                android:id="@+id/spinner_rueda"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </Spinner>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:background="@color/color_white">

            <Spinner
                android:id="@+id/spinner_suspension"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </Spinner>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/autonomia_text"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_white">

                <Spinner
                    android:id="@+id/spinner_autonomia_inf"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

            </FrameLayout>

            <View
                android:layout_width="4dp"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_white">

                <Spinner
                    android:id="@+id/spinner_autonomia_sup"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inter_spinner_vertical_margin"
            android:background="@color/color_white">

            <Spinner
                android:id="@+id/spinner_motor"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </Spinner>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/presupuesto_text"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/myebike_bottom_margin"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_white">

                <Spinner
                    android:id="@+id/spinner_presupuesto_inf"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

            </FrameLayout>

            <View
                android:layout_width="4dp"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_white">

                <Spinner
                    android:id="@+id/spinner_presupuesto_sup"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>