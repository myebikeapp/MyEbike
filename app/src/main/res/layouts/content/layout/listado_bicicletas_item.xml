<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/list_imagen"
        android:layout_width="@dimen/recycleViewImageWidth"
        android:layout_height="@dimen/recycleViewImageHeight"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/list_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_imagen"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Marca: sin datos"/>

    <TextView
        android:id="@+id/list_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_marca"
        android:layout_toRightOf="@+id/list_imagen"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Modelo: sin datos" />


    <TextView
        android:id="@+id/list_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_modelo"
        android:layout_toRightOf="@+id/list_imagen"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Precio: sin datos"/>

    <TextView
        android:id="@+id/list_text_valoracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_precio"
        android:layout_toRightOf="@+id/list_imagen"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="ValoraciÃ³n: "/>

    <RatingBar
        android:id="@+id/list_valoracion"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_precio"
        android:layout_toRightOf="@+id/list_text_valoracion"
        android:progressTint="#FDDB39"/>

</RelativeLayout>