<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardview_margin"
    android:layout_marginLeft="@dimen/cardview_margin"
    android:layout_marginRight="@dimen/cardview_margin"
    android:layout_marginTop="@dimen/cardview_margin"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_imagen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_image_height"
            android:layout_marginBottom="@dimen/cardview_image_margin"
            android:layout_marginLeft="@dimen/cardview_image_margin"
            android:layout_marginRight="@dimen/cardview_image_margin"
            android:layout_marginTop="@dimen/cardview_image_margin"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/list_marca_modelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_text_vertical_margin"
            android:layout_marginLeft="@dimen/cardview_text_horizontal_margin"
            android:layout_marginRight="@dimen/cardview_text_horizontal_margin"
            android:layout_marginTop="@dimen/cardview_text_vertical_margin"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_marca_y_modelo"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_text_vertical_margin"
            android:layout_marginLeft="@dimen/cardview_text_horizontal_margin">

            <TextView
                android:id="@+id/list_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_precio"
                android:textStyle="bold"
                android:visibility="gone" />

            <RatingBar
                android:id="@+id/list_valoracion"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:progressTint="@color/color_ratingbar"
                android:rating="5"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:transformPivotX="130dp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>