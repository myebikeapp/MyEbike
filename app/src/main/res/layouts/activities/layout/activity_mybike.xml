<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".main.MyEbike">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_asistente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_fondo_asistente"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/title_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_vertical_margin"
                android:text="Tipo de Uso"
                android:textSize="@dimen/text_large"/>

            <RadioGroup
                android:id="@+id/radioGroup_tipo_uso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/uso_urbana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="urbana"/>

                <RadioButton
                    android:id="@+id/uso_interurbana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="interurbana"/>

                <RadioButton
                    android:id="@+id/uso_montana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="montaña"/>

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_diametro_rueda_inf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_white"/>

                <Spinner
                    android:id="@+id/spinner_diametro_rueda_sup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_white"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@android:color/darker_gray"/>

            <Spinner
                android:id="@+id/spinner_autonomia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_vertical_margin"
                android:text="Presupuesto123 "
                android:textSize="@dimen/text_large"/>

            <Spinner
                android:id="@+id/spinner_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_vertical_margin"
                android:text="Ubicación Motor"
                android:textSize="@dimen/text_large"/>

            <RadioGroup
                android:id="@+id/radioGroup_ubicacion_motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/ubicacion_cualquiera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="cualquiera"/>

                <RadioButton
                    android:id="@+id/ubicacion_trasero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="trasero"/>

                <RadioButton
                    android:id="@+id/ubicacion_central"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="central"/>

                <RadioButton
                    android:id="@+id/ubicacion_delantero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delantero"/>

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_vertical_margin"
                android:text="Suspensión"
                android:textSize="@dimen/text_large"/>

            <RadioGroup
                android:id="@+id/radioGroup_suspension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/suspension_cualquiera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="cualquiera"/>

                <RadioButton
                    android:id="@+id/suspension_solo_sillin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="solo sillin"/>

                <RadioButton
                    android:id="@+id/suspension_delantera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delantera"/>

                <RadioButton
                    android:id="@+id/suspension_delantera_sillin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delantera sillin"/>

                <RadioButton
                    android:id="@+id/suspension_no_suspension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no suspension"/>

                <RadioButton
                    android:id="@+id/suspension_full_suspension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="full suspension"/>

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_vertical_margin"
                android:text="Tipo de cuadro"
                android:textSize="@dimen/text_large"/>


            <RadioGroup
                android:id="@+id/radioGroup_cuadro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/cuadro_cualquiera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="cualquiera"/>

                <RadioButton
                    android:id="@+id/cuadro_abierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abierto"/>

                <RadioButton
                    android:id="@+id/cuadro_semi_abierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="semi abierto"/>

                <RadioButton
                    android:id="@+id/cuadro_cerrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cerrado"/>

                <RadioButton
                    android:id="@+id/cuadro_plegable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="plegable"/>

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_vertical_margin"
                android:text="Peso"
                android:textSize="@dimen/text_large"/>

            <Spinner
                android:id="@+id/spinner_peso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_vertical_margin"
                android:text="Marca"
                android:textSize="@dimen/text_large"/>

            <Spinner
                android:id="@+id/spinner_marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_buscar_ebikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/floating_button_margin"
        app:srcCompat="@android:drawable/ic_menu_search"/>

</android.support.design.widget.CoordinatorLayout>