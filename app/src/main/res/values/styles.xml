<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="activity_detail_toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="hintTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorHintTextAppearance</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="errorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorErrorTextAppearance</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="customEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorHintTextAppearance</item>
        <item name="colorControlHighlight">@color/color_ratingbar</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
